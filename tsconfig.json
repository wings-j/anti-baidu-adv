{
  "include": ["src"],
  "compilerOptions": {
    "target": "es6",
    "module": "amd",
    "lib": ["esnext", "dom"],
    "outFile": "./dist/index.js",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
